[user]
  name = zawawahoge
  email = zawawahoge@gmail.com

[color] ui = auto
[alias]
  co = checkout
  ci = commit
  st = status --short --branch
  br = branch
  branches = branch -a
  tags = tag
  log = log --stat
  tree = log --graph --date=short --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
  delete-merged-branches = !git branch --merged | grep -vE '^*| master$| release$| develop$' | xargs git branch -d
  follow-upstream = pull --rebase upstream
  merge-upstream = pull --no-ff upstream
  remotes = remote -v
  stashes = stash list
  aliases = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\:\\ /

[core]
  editor = vim
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  commentchar = ";"

[push]
  default = current

[pull]
  default = current
  ff = only

[rebase]
  autosquash = true

[commit]
  verbose = true

[branch "master"]
  rebase = true

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[ghq]
  root = ~/go/src
