" Encoding and File Settings
syntax enable
set encoding=UTF-8
set fileencoding=UTF-8
set termencoding=UTF-8

" Display Options
set scrolloff=5
set list
set listchars=tab:»-,trail:-,extends:»,precedes:«,nbsp:%,eol:↲
set number
set ruler
set showmatch
set matchtime=3
set wrap
set wrapscan
set showcmd
set wildmenu
set wildmode=list:longest

" Backup and File Write Options
set noswapfile
set nowritebackup
set nobackup

" Bell and Visual Options
set vb t_vb=
set novisualbell

" Movement and Search
set backspace=indent,eol,start
set nocompatible
set nostartofline
set matchpairs& matchpairs+=<:>
set incsearch
set hlsearch
set ignorecase
set smartcase

" Command Behavior
set textwidth=0
set shiftround
set infercase
set hidden
set switchbuf=useopen
set gdefault
set timeoutlen=300

" Indentation
set tabstop=2
set shiftwidth=2
set expandtab
set smarttab
set smartindent

" History
set undolevels=300
set history=10000

" IME
set iminsert=0
set imsearch=0
set imdisable

" Status Line
set laststatus=2
set cmdheight=2
